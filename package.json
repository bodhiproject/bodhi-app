{
  "name": "bodhi-api",
  "version": "0.2.0",
  "description": "An open source blockchain explorer for monitoring Bodhi platform",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js --qtumpath=./qtum/mac/bin",
    "start:debug": "node --inspect src/index.js",
    "test": "mocha --recursive src/test/.",
    "lint:fix": "eslint --fix -- src/.",
    "pkg:mac": "mkdir -p bin/mac/qtum; cp qtum/mac/bin/qtumd bin/mac/qtum/qtumd; pkg . -t node9-mac -o bin/mac/bodhi-app-mac",
    "pkg:win64": "mkdir -p bin/win64/qtum; cp qtum/win64/bin/qtumd.exe bin/win64/qtum/qtumd.exe; pkg . -t node9-win -o bin/win64/bodhi-app-win64.exe"
  },
  "keywords": [
    "qtum",
    "bodhi",
    "api",
    "graphql"
  ],
  "author": "bodhi.network",
  "license": "ISC",
  "bin": "src/index.js",
  "pkg": {
    "assets": "ui/, src/logs/"
  },
  "dependencies": {
    "apollo-server-restify": "^1.3.2",
    "babel-polyfill": "^6.26.0",
    "bluebird": "^3.5.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "dataloader": "^1.3.0",
    "dotenv": "^5.0.0",
    "file-system": "^2.2.2",
    "graphql": "^0.11.7",
    "graphql-subscriptions": "^0.5.5",
    "graphql-tools": "^2.10.0",
    "i": "^0.3.6",
    "lodash": "^4.17.4",
    "moment": "^2.20.1",
    "nedb": "^1.8.0",
    "nedb-promise": "^2.0.1",
    "node-fetch": "^1.7.3",
    "opn": "^5.2.0",
    "pg": "^7.4.0",
    "qweb3": "^0.6.0",
    "restify": "^6.3.4",
    "restify-cors-middleware": "^1.1.0",
    "restify-router": "^0.5.0",
    "subscriptions-transport-ws": "^0.9.1",
    "web3-utils": "^1.0.0-beta.26",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "mocha": "^4.1.0"
  },
  "authors": [
    {
      "name": "Frank Hu",
      "email": "frank@bodhi.network",
      "url": "https://www.bodhi.network/"
    },
    {
      "name": "Deric Walintukan",
      "email": "deric@bodhi.network",
      "url": "https://www.bodhi.network/"
    },
    {
      "name": "Chris Li",
      "email": "chris@bodhi.network",
      "url": "https://www.bodhi.network/"
    }
  ]
}
